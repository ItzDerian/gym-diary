<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Name:</label>
        <input class="form-input" type="text" id="name-signup" placeholder="Jane Doe" />
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" placeholder="jane@gmail.com" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" placeholder="at least 8 characters"  />
      </div>
        <div class="form-group">
        <label for="name-signup">DOB:</label>
        <input class="form-input" type="text" id="DOB-signup" placeholder="YYYY-MM-DD"/>
      </div>
        <div class="form-group">
        <label for="name-signup">Height:</label>
        <input class="form-input" type="text" id="height-signup" placeholder="in inches" />
      </div>
      </div>
        <div class="form-group">
        <label for="name-signup">Weight:</label>
        <input class="form-input" type="text" id="weight-signup" placeholder="in pounds" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup!</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
